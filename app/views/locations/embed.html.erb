<script type="text/javascript" src="http://google-maps-utility-library-v3.googlecode.com/svn/tags/keydragzoom/2.0.9/src/keydragzoom_packed.js"></script>
<script type="text/javascript" charset="utf-8">

  // ================= globals ==================

  var lat = 17.30868;
  var lng = -95.27343;
  var zoom = 2;
  var type = google.maps.MapTypeId.ROADMAP;
  <% unless @perma.nil? %>
		<% unless @perma[:lat].nil? %>lat = <%= @perma[:lat] %>;<% end %>
		<% unless @perma[:lng].nil? %>lng = <%= @perma[:lng] %>;<% end %>
		<% unless @perma[:zoom].nil? %>zoom = <%= @perma[:zoom] %>;<% end %>
		<% unless @perma[:type].nil? %>type = '<%= @perma[:type] %>';<% end %>
  <% end %>
  muni = <%= (@perma.nil? or (@perma[:muni].present? and @perma[:muni])) ? "true" : "false" %>;
	labels = <%= (@perma.nil? or (@perma[:labels].present? and @perma[:labels])) ? "true" : "false" %>;
  var skip_ids = null;
  var type_filter = undefined;
  <% unless @type.nil? %>
    type_filter = <%= @type.id %>;
  <% end %>

  // ================= functions =================

  function initialize() {
    basemap(lat,lng,zoom,type);
    
    google.maps.event.addListener(map, 'maptypeid_changed', function(event) {
      update_attribution();
    });

    google.maps.event.addListener(map, 'rightclick', function(event) {
      remove_add_marker();
      place_add_marker(event.latLng);
    });
    
    google.maps.event.addListenerOnce(map, 'tilesloaded', function(event) {
      update_display_embedded(true,zoom,muni);
      if (labels) {
        labelize_markers();
      }
    });
    
    google.maps.event.addListener(map, 'bounds_changed', function() {
      google.maps.event.addListenerOnce(map, 'idle', function(){
        update_display_embedded(false,null,muni);
      });
    });
      
    google.maps.event.addListener(map, 'zoom_changed', function() {
      google.maps.event.addListenerOnce(map, 'idle', function() {
        update_display_embedded(false, null, muni);
      });
    });     
  }

  // ================== main-level code ===================

  google.maps.event.addDomListener(window, 'load', initialize);
  
</script>

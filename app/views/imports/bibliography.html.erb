<table style="border-collapse:separate;border-spacing:0 2em;">
<% Import.all.each do |import| %>

<tr>
  <a name="<%= import.id %>"></a>
	<td style="vertical-align:top;text-align:right;padding:2em 1.5em 0 0;"><a href="/imports/<%= import.id %>/"><%= import.id %></a><br/></td>
	<td style="padding:2em;background-color:#fafafa;">

	<!-- Name, Url -->
	<b><%= import.name %></b><br />
	<% unless import.url.blank? %>
		<a href="<%= import.url %>"><%= import.url.include?("maps.google") ? "Google Maps" : import.url %></a><br />
	<% end %>

	<!-- Type, Date -->
	<%= import.muni ? "Municipal data" : "Community map" %> | Imported <i><%= import.created_at.to_s %></i><br />

	<hr style="border:1px solid #eee;margin:1.5em 0;">

	<span style="font-size:100%;">
	<!-- Comments -->
	<% unless import.comments.blank? %>
		<%= raw import.comments.gsub("\n","<br>") %><br /><br />
	<% end %>

	<!-- License -->
	<% unless import.license.blank? %>
		<%= raw import.license.gsub("\n","<br>") %>
	<% else %>
		<i>No license defined, assume <a href="http://creativecommons.org/licenses/by-nc/3.0/deed.en_GB">Creative Commons Share-Alike Non-Commercial</a></i>.
	<% end %>
	</span>

	</td>
</tr>

<% end %>
</table>
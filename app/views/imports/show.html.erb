<%= link_to('[+] Show all imports', bibliography_imports_path) %>

<table style="border-collapse:separate;border-spacing:0 2em;">
<tr>
	<td style="vertical-align:top;text-align:right;padding:2em 1.5em 0 0;">
		#<%= @import.id %>
		<% if user_signed_in? and current_user.is? :admin %>
			<br/><a href="/imports/<%= @import.id %>/edit">edit</a>
		<% end %>
	</td>
	<td style="padding:2em;background-color:#fafafa;">

	<!-- Name, Url -->
	<b><%= @import.name %></b><br />
	<% unless @import.url.blank? %>
		<a href="<%= @import.url %>">
		<%= !import.url.match('google.com/maps|maps.google').nil? ? "Google Map" : (!import.url.match('google.com/fusiontables').nil? ? "Google Fusion Table" : (!import.url.match('mapsengine.google').nil? ? "Google Maps Engine" : import.url)) %>
		</a><br />
	<% end %>

	<!-- Type, Date -->
	<%= @import.muni ? "Tree inventory" : "Community map" %> | Imported <i><%= @import.created_at.to_s %></i><br />

	<hr style="border:1px solid #eee;margin:1.5em 0;">

	<span style="font-size:100%;">
	<!-- Comments -->
	<% unless @import.comments.blank? %>
		<%= raw @import.comments.gsub("\n","<br>") %><br /><br />
	<% end %>

	<!-- License -->
	<% unless @import.license.blank? %>
		<%= raw @import.license.gsub("\n","<br>") %>
	<% else %>
		<i>No license specified, assume <a href="http://creativecommons.org/licenses/by-nc-sa/3.0/">Creative Commons (Attribution, Non-commercial, Share-alike)</a></i>.
	<% end %>
	</span>

	</td>
</tr>
</table>
<!-- Source Form -->
<%= form_for(problem,:html => {:id=>"problemform",:onsubmit=>"process_form();return false;"}) do |f| %>

  <!-- Errors -->
  <% if problem.errors.any? %>
    <div id="error_explanation">
      <strong><%= pluralize(problem.errors.count, "error") %> prohibited this issue from being saved:</strong>
        <ul>
      <% problem.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :id %>
  <%= f.hidden_field :location_id %>

  <div class="field">
    <%= f.label :problem_type %><br />
    <span class="subtext">What's the problem?</span><br />
    <%= f.select(:problem_code,Problem::Codes.collect{ |r| [r,Problem::Codes.index(r)] },:include_blank => true) %>
  </div>

  <div class="field">
    <%= f.label :explanation %><br />
    <span class="subtext">Explain the problem (if necessary).</span><br />
    <%= f.text_area(:comment,:size => "40x3") %>
  </div>

  <div class="field">
   <%= f.label :contact_info %><br />
   <span class="subtext">Give your name and email if you'd like us to contact you</span><br />
   Name: <%= f.text_field(:name,:size => 20) %>
   Email: <%= f.text_field(:email,:size => 20) %>
  </div>
  
  <br />
  <!-- Captcha -->
  <div id="captcha"></div>
  <br />
  <!-- Submit -->
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
  
<% end %>
</form>

<script type="text/javascript">
show_recaptcha("captcha");
function process_form(){
  $.ajax({
    type: 'POST',
    url: '/problems',
    data: $("#problemform").serialize(),
    success: function(data){
      $("#problem_modal").html(data);
    }
  });
}
</script>

<h2><%= I18n.t("users.sign_in") %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, I18n.t("glossary.email") %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, I18n.t("glossary.password") %><br />
    <%= f.password_field :password %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %> <%= f.label :remember_me, I18n.t("users.remember_me") %>
    </div>
  <% end -%>

  <div class="field">
    <%= f.submit I18n.t("glossary.login") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
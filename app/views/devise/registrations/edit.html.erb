<h2>Edit Account</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field confirmation">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :bio %><br/>
    <span class="subtext">Optionally, a bit about you.</span><br />
    <%= f.text_area :bio, :size => "40x6" %>
  </div>
  <br/>
  <%= render :partial => "range_map", :locals => {:f => f} %>

  <div class="field">
    <%= f.label :options %><br />
    <%= f.check_box :range_updates_email %> Receive a weekly email about changes in your foraging range (provided it is defined above)<br />
    <%= f.check_box :add_anonymously %> Add points anonymously (even when logged in)
  </div>

  <div class="field confirmation">
    <%= f.label :new_password %>
    <span class="subtext">Only if you want to change it. Type it in twice to confirm.</span>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :current_password %><br />
    <span class="subtext">We need your current password to apply your changes.</span><br />
    <%= f.password_field :current_password %>
  </div>

  <div class="field">
    <%= f.submit "Apply changes" %>
  </div>
  
<% end %>

<p>
Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.
</p>
<h1>Users</h1>

<table id="user_list">
<thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Roles</th>
	  <th>Anonymous</th>
    <th>Range</th>
    <th>Updates</th>
    <th>Announcements</th>
    <th>Created</th>
    <th>Confirmed</th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @users.each do |user| %>
  <tr>
    <td style="text-align:right;"><%= user.id %></td>
    <td><%= user.name %></td>
    <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
    <td><%= user.roles.join(", ") %></td>
    <td><%= user.add_anonymously ? "x" : "" %></td>
    <td><%= user.range.blank? ? "" : "x" %></td>
    <td><%= user.range_updates_email ? "x" : "" %></td>
    <td><%= user.announcements_email ? "x" : "" %></td>
    <td><%= user.created_at %></td>
    <td><%= user.confirmed_at %></td>
    <td>
      <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= link_to 'Switch', switch_user_path(user) %>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<br/><br/>
Announcements BCC List:  <%= @announcements_list.join(", ") %>

<script type="text/javascript" charset="utf-8">
jQuery(document).ready(function(){
    jQuery('#user_list').dataTable({
      "aaSorting": [[7,"desc"]],
      "bPaginate": false
    });
});
</script>
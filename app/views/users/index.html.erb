<h1>Users</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Created At</th>
    <th>Roles</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.created_at %></td>
    <td><%= user.roles.length == 0 ? "None" : user.roles.join(", ") %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

